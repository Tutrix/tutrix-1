<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tutrix - Student Profile</title>
    <style>
        /* General Styles */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #F8F9FA; /* Light background for contrast */
            color: #333;
        }

        .container {
            max-width: 900px;
            margin: 50px auto;
            padding: 20px;
            background-color: #FFFFFF; /* White card background */
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Header Section */
        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 28px;
            color: #4B0082;
        }

        /* Profile Section */
        .profile-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .profile-pic {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid #6A0DAD;
            margin-bottom: 10px;
        }

        .profile-name {
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }

        .profile-role {
            font-size: 16px;
            color: #666;
        }

        /* Stats Section */
        .stats {
            display: flex;
            justify-content: space-around;
            margin: 20px 0;
        }

        .stat-item {
            text-align: center;
        }

        .stat-item h3 {
            font-size: 20px;
            color: #6A0DAD;
            margin: 0;
        }

        .stat-item p {
            font-size: 14px;
            color: #666;
        }

        /* Info Section */
        .info-section {
            margin-top: 20px;
        }

        .info-section h2 {
            font-size: 20px;
            color: #4B0082;
            margin-bottom: 10px;
            border-bottom: 2px solid #6A0DAD;
            padding-bottom: 5px;
        }

        .info-list {
            list-style: none;
            padding: 0;
        }

        .info-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #EEE;
        }

        .info-item span {
            font-size: 16px;
            color: #333;
        }

        /* Button Group */
        .btn-group {
            text-align: center;
            margin-top: 30px;
        }

        .btn {
            padding: 10px 20px;
            margin: 0 10px;
            font-size: 14px;
            font-weight: bold;
            text-decoration: none;
            color: #FFFFFF;
            background-color: #6A0DAD;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #4B0082;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header Section -->
        <div class="header">
            <h1>Tutrix Student Profile</h1>
        </div>

        <!-- Profile Section -->
        <div class="profile-header">
            <img src="https://via.placeholder.com/120" alt="Profile Picture" class="profile-pic">
            <div class="profile-name"><%= user.name %></div>
            <div class="profile-role">Student</div>
        </div>

        <!-- Stats Section -->
        <div class="stats">
            <div class="stat-item">
                <h3><%= profile.completedSessions %></h3>
                <p>Completed Sessions</p>
            </div>
            <div class="stat-item">
                <h3><%= profile.upcomingLessons.length %></h3>
                <p>Upcoming Lessons</p>
            </div>
            <div class="stat-item">
                <h3><%= profile.major %></h3>
                <p>Major</p>
            </div>
        </div>

        <!-- Information Section -->
        <div class="info-section">
            <h2>Profile Information</h2>
            <ul class="info-list">
                <li class="info-item">
                    <span>Email:</span>
                    <span><%= user.email %></span>
                </li>
                <li class="info-item">
                    <span>Graduation Year:</span>
                    <span><%= profile.graduationYear %></span>
                </li>
                <li class="info-item">
                    <span>Interests:</span>
                    <span><%= profile.interests.join(', ') %></span>
                </li>
                <li class="info-item">
                    <span>LearningStyles:</span>
                    <span><%= profile.learningStyles.join(', ') %></span>
                </li>
            </ul>
        </div>

        <!-- Upcoming Lessons Section -->
        <div class="info-section">
            <h2>Upcoming Lessons</h2>
            <% profile.upcomingLessons.forEach((lesson) => { %>
            <div class="info-item">
                <span><%= lesson.subject %></span>
                <span><%= lesson.date %></span>
            </div>
            <% }) %>
        </div>

        <!-- Buttons -->
        <div class="btn-group">
            <a href="/tasks" class="btn">View Tasks</a>
            <a href="/home" class="btn">Go Home</a>
            <a href="/logout" class="btn">Logout</a>
        </div>
    </div>
</body>
</html>
