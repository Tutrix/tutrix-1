<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tutrix Availability Calendar</title>
  <!-- FullCalendar CSS -->
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css" rel="stylesheet">
  <!-- FullCalendar JS -->
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #dff9fb, #c7ecee);
      color: #2c3e50;
      margin: 0;
      padding: 20px;
      text-align: center;
    }
    h1 {
      color: #2c3e50;
      text-shadow: 2px 2px 5px #95afc0;
    }
    #calendar {
      max-width: 900px;
      margin: 20px auto;
      padding: 20px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      background: #ffffff;
      border-radius: 8px;
    }
  </style>
</head>
<body>
  <h1>Tutrix Availability Calendar</h1>
  <div id="calendar"></div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const calendarEl = document.getElementById('calendar');

      const calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        events: [
          { title: 'Available', start: '2024-12-05' },
          { title: 'Available', start: '2024-12-06' },
          { title: 'Available', start: '2024-12-07' }
        ],
        dateClick: function (info) {
          alert(`You selected ${info.dateStr}`);
        }
      });

      calendar.render();
    });
  </script>
</body>
</html>
